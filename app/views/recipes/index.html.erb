<div class="container">
<p id="notice"><%= notice %></p>

<h1>Recipes</h1>



    <% @recipes.each do |recipe| %>

    <div class="col-md-4">
    <div class="recipe-box">
      <%if recipe.image? %>
      <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe%>
      <% end %>
      <ul>
        <li><%= recipe.title %></li>
        <li><%= recipe.description %></li>
        <li><%= link_to 'Show', recipe %> | <%= link_to 'Edit', edit_recipe_path(recipe) %> | <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div><!-- recipe box -->
    </div><!-- col-md-4 -->
    
    <% end %>
 

<br>

<%= link_to 'New Recipe', new_recipe_path %>
</div><!-- container -->